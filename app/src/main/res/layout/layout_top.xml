<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_common_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/id_title_bg">

        <ImageView
            android:id="@+id/top_left_icon_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/id_title_goback"/>

        <TextView
            android:id="@+id/top_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/top_right_icon_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/id_title_help"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/unLoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/id_title_bg"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/id_logo"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/top_right_icon_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/id_purchase_regist"/>

        <ImageView
            android:id="@+id/top_middle_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/top_right_icon_regist"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/id_purchase_login"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/id_title_bg"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:src="@mipmap/id_cmc_logo" />

        <ImageButton
            android:id="@+id/top_purchase_system_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@mipmap/id_purchase_system_info" />

        <TextView
            android:id="@+id/top_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/top_purchase_system_info"
            android:text="@string/is_user_loginned_test" />
    </RelativeLayout>
</RelativeLayout>